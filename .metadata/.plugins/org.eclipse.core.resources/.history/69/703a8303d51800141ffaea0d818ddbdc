//sub1
var win1 = Ti.UI.createWindow({title:'Sub-Window 1'});
var table1 = Ti.UI.createTableView({style:Titanium.UI.iPhone.TableViewStyle.GROUPED});
var row1 = Ti.UI.createTableViewRow();
var label1 = Ti.UI.createLabel({left:9, text: "This is a sub option!"});
row1.add(label1);
table1.appendRow(row1);
win1.add(table1);
 
